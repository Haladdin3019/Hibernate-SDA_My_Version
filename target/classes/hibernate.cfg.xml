<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/jdbc_hibernate?serverTimezone=UTC&amp;useSSL=false
        </property>
        <property name="connection.username">sdap</property>
        <property name="connection.password">sdap</property>
        <property name="show_sql">true</property>
        <property name="hibernate_session.dialect">org.hibernate_session.dialect.MySQLDialect</property>
        <property name="hibernate_session.show_sql">true</property>
        <property name="hibernate_session.current_session_context_class">thread</property>

        <mapping class="dto.StudentH"/>
        <mapping class="dto.Person"/>
        <mapping class="dto.Dog"/>
    </session-factory>
</hibernate-configuration>